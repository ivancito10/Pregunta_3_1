@model List<Pregunta_3_1.Models.Cuenta>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Lista de Cuentas</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-success" href="@Url.Action("Registrar", "Cuenta")">Crear Nuevo</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                               
                                <th>Nombre de Persona</th> <!-- Cambio aquí para reflejar el nombre de la persona en lugar del ID -->
                                <th>Tipo de Cuenta</th>
                                <th>Saldo</th>
                                <th>Fecha de Apertura</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Pregunta_3_1.Models.Cuenta item in Model)
                            {
                                <tr>
                                   
                                    <td>@item.NombrePersona</td> <!-- Cambio aquí para reflejar el nombre de la persona en lugar del ID -->
                                    <td>@item.TipoCuenta</td>
                                    <td>@item.Saldo</td>
                                    <td>@item.FechaApertura</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Editar", "Cuenta", new { idcuenta = item.CuentaID })">Editar</a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Eliminar", "Cuenta", new { idcuenta = item.CuentaID })">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

